<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/index.css">
    <link rel="stylesheet" href="../styles/addProduct.css">
    <title>Products</title>
</head>
<body>
    <header >
        <nav class="nav">
            <a href="/products/category/1">celulares</a>
            <a href="/products/category/2">tablets</a>
            <a href="/products/category/3">computadoras</a>
        </nav>
        <form action="/products/search" method="GET" class="buscador">
            <input type="text" name="keyword" placeholder="Buscar producto">
            <button type="submit">Buscar</button>
        </form>
    </header>

    <main>
        <h2>Agregar producto</h2>

        <form method="POST" class="form__addProduct" enctype="multipart/form-data">
                <label for="nombre">Nombre del producto</label>
                <input type="text" id="nombre" name="nombre"  value="">
        
                <label for="precio">Precio</label>
                <input type="number" id="precio" name="precio"  value="">

                <label for="categoria">Categorias</label>
                <select name="categoria" id="categoria">
                    <option value="" hidden selected>Seleccioná la categoría</option>
                    <% categories.forEach(categoria => { %>
                        <option value="<%= categoria.id %>"><%= categoria.name %></option>
                    <% }) %>
                </select>

                <label for="image">Imagen</label>
                <input type="file" id="image" name="image" accept="image/*" multiple>
    
                <button type="submit">Agregar</button>
                <button type="reset">Limpiar</button>
        </form>
    </main>
 
</body>
</html>