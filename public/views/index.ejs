<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/index.css">
    <title>Document</title>
</head>
<body>
    <header class="header">
        <a href="/products/category/1">celulares</a>
        <a href="/products/category/2">tablets</a>
        <a href="/products/category/3">computadoras</a>
    </header>
    <section >
        <h1 style="background-color: aqua;">Celulares</h1>

        <% celulares.forEach(({name,id,img})=> { %>
            <article style="border: 1px solid red; width: 30%;">
                <a href="/products/detail/<%= id %>"><img height="220px" src="/images/<%= img %>" alt=""></a>
                <h4>
                    <%= name %>
                </h4>
                    <a href="/products/detail/<%= id %>">VER MAS</a>
            </article>
            <br>
        <% }) %>
    </section>

    <section>
        <h1 style="background-color: aqua;">Tablets</h1>

        <% tablets.forEach(({name,id,img})=> { %>
            <article style="border: 1px solid red; width: 30%;" >
                <a href="/products/detail/<%= id %>"><img height="220px" src="/images/<%= img %>" alt=""></a>
                <h4>
                    <%= name %>
                </h4>
               
                <a href="/products/detail/<%= id %>">VER MAS</a>
            </article>
            <br>
            <% }) %>
    </section>

    <section>
        <h1 style="background-color: aqua;">Computadoras</h4>

        <% computadoras.forEach(({name,id,img})=> { %>
            <article style="border: 1px solid red; width: 30%;">
                <a href="/products/detail/<%= id %>"><img height="220px" src="/images/<%= img %>" alt=""></a>
                <h4>
                    <%= name %>
                </h4>
               
                <a href="/products/detail/<%= id %>">VER MAS</a>
            </article>
            <br>
            <% }) %>
    </section>
</body>
</html>